{
  "name": "ng-images-preview",
  "version": "1.0.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "build:lib": "cp README* projects/ng-images-preview/ && ng build ng-images-preview --configuration production && rm projects/ng-images-preview/README*",
    "build:demo": "ng build demo --configuration production",
    "release": "npm run build:lib && cd dist/ng-images-preview && npm publish",
    "clean": "rm -rf dist .angular"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "description": "A lightweight, mobile-ready Angular 18+ image preview library with zoom, rotate, flip, and custom template support. Built with Signals and Vanilla CSS.",
  "keywords": [
    "angular",
    "image-preview",
    "images-preview",
    "image-viewer",
    "lightbox",
    "gallery",
    "zoom",
    "rotate",
    "mobile-ready",
    "touch-support",
    "signals",
    "standalone",
    "vanilla-css"
  ],
  "author": "lanxuexing <lanxuexing313wsr@163.com>",
  "license": "MIT",
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/animations": "^21.0.7",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.0",
    "angular-eslint": "21.1.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.47.0",
    "vitest": "^4.0.8"
  }
}